<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353E4F"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="20dp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/reg_imageView2"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/register" />



        <EditText
            android:id="@+id/reg_edtEmail"

            style="@style/editTextregister_style"
            android:hint="User Email ID"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/reg_edtCmpPassword"
            style="@style/editTextregister_style"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/reg_edtconfirmPassword"
            style="@style/editTextregister_style"
            android:hint="Confirm Password"
            android:inputType="textEmailAddress|textPersonName|textPassword" />


        <Button
            android:id="@+id/reg_btnRegister"
            style="@style/buttonregister_style"
            android:text="Register" />

        <Button
            android:id="@+id/reg_btnLogin"
            style="@style/button_style"
            android:text="Already have an account?Login " />
    </LinearLayout>

</RelativeLayout>

